# ActiveMQ environment configuration

# JVM options
ACTIVEMQ_OPTS="-Xms512M -Xmx1G -Dorg.apache.activemq.UseDedicatedTaskRunner=true"

# JMX options
ACTIVEMQ_SUNJMX_START="-Dcom.sun.management.jmxremote.port=1099 -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=false"

# Uncomment to enable remote debugging
#ACTIVEMQ_DEBUG_OPTS="-Xdebug -Xnoagent -Djava.compiler=NONE -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5005"

# Web console configuration
ACTIVEMQ_ADMIN_LOGIN=admin
ACTIVEMQ_ADMIN_PASSWORD=admin

# Startup wait time
ACTIVEMQ_START_TIMEOUT=60 